@model IEnumerable<SpotMapProject.Models.AspNetSpotEdit>

@{
    ViewBag.Title = "EditorDetails";
}

<h2>EditorDetails</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.spot_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.active)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.spot_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.active)
        </td>
        <td>
            <a href="@Url.Content("~/Users/DeleteEditorFromSpot?id="+item.spot_id+"&&username="+item.username)">Delete </a>
        </td>
    </tr>
}

</table>
